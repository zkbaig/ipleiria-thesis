%%% Basic macros used in the chapters

\newtcolorbox[auto counter,number within=section]{block}[1][]{%
    enhanced jigsaw,
    coltitle=#1,
    colback=#1!8!white,
    colframe=#1!8!white,
    fonttitle=\bfseries,
    sharp corners=west,
    detach title,
    borderline west={.85mm}{0pt}{#1},
    pad at break=1mm,
    top=4mm,
    bottom=4mm,
    title={\IfStrEq{#1}{todo}{To-Do}{\capitalisewords{#1}}},
    code={\ifdefempty{\tcbtitletext}{}{\tcbset{before upper={\tcbtitle\par\medskip}}}},
}

